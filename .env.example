# QuickSpin API Configuration
QUICKSPIN_API_URL=https://api.quickspin.io
QUICKSPIN_AUTH_URL=https://auth.quickspin.io

# AI Services
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768

# Database
MONGODB_URI=mongodb://localhost:27017/quickspin_ai
MONGODB_DATABASE=quickspin_ai

# Vector Store
CHROMA_PERSIST_DIR=/data/chroma
CHROMA_COLLECTION_NAME=quickspin_knowledge

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256

# Application
APP_ENV=development
LOG_LEVEL=INFO
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=2

# Kubernetes
KUBECONFIG_PATH=~/.kube/config
K8S_IN_CLUSTER=false
