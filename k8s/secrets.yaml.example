apiVersion: v1
kind: Secret
metadata:
  name: quickspin-ai-secrets
  namespace: quickspin-ai
type: Opaque
stringData:
  # IMPORTANT: This is a template file. Actual secrets are managed via GitLab CI/CD Variables.
  # See: GITLAB_VARIABLES_SETUP.md for configuration instructions

  # QuickSpin API Configuration
  QUICKSPIN_API_URL: "REPLACE_WITH_GITLAB_VARIABLE"  # https://api.quickspin.cloud
  QUICKSPIN_AUTH_URL: "REPLACE_WITH_GITLAB_VARIABLE"  # https://auth.quickspin.cloud

  # AI Services
  GROQ_API_KEY: "REPLACE_WITH_GITLAB_VARIABLE"  # gsk_your_groq_api_key

  # Database
  MONGODB_URI: "REPLACE_WITH_GITLAB_VARIABLE"  # mongodb://user:pass@host:port/db

  # Security
  JWT_SECRET_KEY: "REPLACE_WITH_GITLAB_VARIABLE"  # Generate: openssl rand -base64 32

  # Kubernetes
  K8S_IN_CLUSTER: "true"

# NOTE: In CI/CD, this secret is created dynamically using:
# kubectl create secret generic quickspin-ai-secrets \
#   --from-literal=QUICKSPIN_API_URL="$QUICKSPIN_API_URL" \
#   --from-literal=QUICKSPIN_AUTH_URL="$QUICKSPIN_AUTH_URL" \
#   --from-literal=GROQ_API_KEY="$GROQ_API_KEY" \
#   --from-literal=MONGODB_URI="$MONGODB_URI" \
#   --from-literal=JWT_SECRET_KEY="$JWT_SECRET_KEY" \
#   --from-literal=K8S_IN_CLUSTER="true" \
#   --namespace quickspin-ai \
#   --dry-run=client -o yaml | kubectl apply -f -
